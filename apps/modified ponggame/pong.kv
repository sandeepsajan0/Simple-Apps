

#:kivy 1.0.9

<PongBall>:
    #background_color(0,0,1,1)
    
    size: 50, 50 
    canvas:
    	Color:
        	rgb: 1, 1, 1
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    
    
    size: 55, 200
    canvas:
    	Color:
        	rgb: 0, 0, 1
        Rectangle:
            pos:self.pos
            size:self.size
           

<PongGame>:
    #backgroundcolour = [1, 15, 50]
    ball: pong_ball
    player1: player_left
    player2: player_right
    player3: player_up
    player4: player_down
    canvas.before:
    	Color:
        	rgb: 1, 1, 0	
        Rectangle:
            pos: self.center_x-5, 0
            size: 25, self.height
    
    Label:
        font_size: 70 
        #bcolour(1,1,1)
         
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    
    
    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x
        size:45, 300
        center_y: root.center_y
        
        
    PongPaddle:
        id: player_up
        size:45, 255
        x: root.width * 3 /3 -self.width
        center_x: root.center_x
        center_y: root.center_y *5 /3
    PongPaddle:
        id: player_right
        size:45, 210
        x: root.width * 4 /5-self.width
        center_y: root.center_y * 5 /5
    PongPaddle:
        id: player_down
        size:45, 255
        x: root.width * 5 /5-self.width
        center_y: root.center_y * 1 /5     
   

       
    
